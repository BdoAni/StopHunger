@model Product

@{
    ViewData["Title"] = "New Product";
}

<div class="w-50 mx-auto">
    <h2 class="text-center">New Product</h2>

    <form asp-controller="Product" asp-action="Create" method="POST">
        <div class="form-group">
            <label asp-for="Categorie">Category</label>
            <span asp-validation-for="Categorie" class="text-danger font-weight-bold"></span>
            <input asp-for="Categorie" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <span asp-validation-for="Name" class="text-danger font-weight-bold"></span>
            <input asp-for="Name" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <span asp-validation-for="Description" class="text-danger font-weight-bold"></span>
            <textarea asp-for="Description" class="form-control" cols="30" rows="5"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Quantity"></label>
            <span asp-validation-for="Quantity" class="text-danger font-weight-bold"></span>
            <input asp-for="Quantity" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <span asp-validation-for="Price" class="text-danger font-weight-bold"></span>
            <input asp-for="Price" class="form-control">
        </div>
        
        <div class="form-group">
            <label asp-for="Date"></label>
            <span asp-validation-for="Date" class="text-danger font-weight-bold"></span>
            <input asp-for="Date" class="form-control">
        </div>

        <button class="btn btn-sm btn-outline-success">Submit</button>
    </form>
</div>